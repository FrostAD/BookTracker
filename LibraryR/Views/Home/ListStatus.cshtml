@model IEnumerable<LibraryR.Models.StatusType>

@{
    ViewData["Title"] = "ListStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListStatus</h1>

<p>
    <a asp-action="CreateStatus">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model is not null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a asp-action="EditStatus" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="DetailsStatus" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="DeleteStatus" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
