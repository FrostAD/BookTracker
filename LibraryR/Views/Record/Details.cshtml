@model LibraryR.ViewModels.RecordIndexVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Record</h4>
    <hr />
        @if (ViewBag.Success is not null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Success
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookTitle)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.Record.BookId">@Model.BookTitle</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Record.RecordDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.RecordDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusString)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { BookId = @Model.Record.BookId, UserId = @Model.Record.UserId })|
    @Html.ActionLink("Delete", "Delete", new { BookId = @Model.Record.BookId, UserId = @Model.Record.UserId })|

    <a asp-action="Index">Back to List</a>
</div>
@section Scripts
{
    <script>$('.alert').alert()</script>
}
